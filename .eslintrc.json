{
    "env": {
        "browser": true,
        "commonjs": true,
		"es6": true,
		"jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
	},
	"globals": {
		"_$": true,
		"__":true,
		"_Mn":true,
		"_Bb":true,
		"_Backbone":true,
		"_Popper": true,
		"_Console": true,
		"_moment": true
	},
    "rules": {
		"no-console":"warn",
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [
            "off",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
		],
		"no-unused-vars":"warn"
    }
}
